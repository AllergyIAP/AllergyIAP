<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.allergyiap">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activities.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service android:name=".utils.FCMService">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>
        <service android:name=".utils.FCMInstanceIDService">
            <intent-filter>
                <action android:name="com.google.firebase.INSTANCE_ID_EVENT" />
            </intent-filter>
        </service>

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_key" />

        <activity android:name=".activities.MapActivity" android:label="@string/map_name"/>
        <activity android:name=".activities.ProductCatalogActivity" android:label="@string/product_catalog_name"/>
        <activity android:name=".activities.MyAlarmsActivity" android:label="@string/my_alarms_name"/>
        <activity android:name=".activities.ConfigurationActivity" android:label="@string/configuration_name"/>
        <activity android:name=".activities.MapAllergyLevelsActivity" />
        <activity android:name=".activities.MapAllergyLevelsDetailsActivity"></activity>
    </application>

</manifest>